{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
        ],

        // Ici vous définissez vos règles de syntaxe
        // Retrouvez les règles sur la documentation d'ESLint
        "no-unused-vars": "off",
        "no-console": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "no-restricted-syntax": "off",
        "no-use-before-define": "off",
        "no-prototype-builtins": "off",
        "no-shadow": "off"
    },
    "globals": {
        "Api": "readonly",
        "AppliancesDropdownMenu": "readonly",
        "IngredientsDropdownMenu": "readonly",
        "Recipe": "readonly",
        "RecipeCard": "readonly",
        "UstensilsDropdownMenu": "readonly"
    }
}
